<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_avatar_receive_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:src="@drawable/avt"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text_receive_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="46dp"
            android:background="@drawable/round_chat_receive"
            android:padding="8dp"
            android:text="Chào you? You thế nào? sdfsjkdb fsdbfbsd sdfbsdfbsdj sdsdkufb"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_time_receive_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="12:30 PM"
            android:textColor="#9AAE52"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>